{
    "compilerOptions": {
        "allowJs": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": ["dom", "es2017"],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "esnext",
        "types": ["cypress"],
        "baseUrl": ".",
        "plugins": [{ "name": "nexus/typescript-language-service" }], // To improve the development experience with nexus
        "paths": {
            "components/*": ["components/*"],
            "@actions/*": ["store/actions/*"],
            "@styled/*": ["components/Styled/*"],
            "@graphql/*": ["graphql/*"]
        }
    },
    "exclude": ["node_modules", "**/*.spec.ts", "**/*.spec.tsx", "**/*.test.ts", "**/*.test.tsx"],
    "include": ["**/*.ts", "**/*.tsx"]
}
